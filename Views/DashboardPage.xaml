<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FinanzAPP.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Dashboard Financiero" 
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="0,0,0,24"/>

        <!-- Resumen de Ingresos -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Ingreso Mensual" 
                               FontSize="16" 
                               Opacity="0.7"/>
                    <TextBlock Text="{x:Bind ViewModel.IngresoMensual, Mode=OneWay}" 
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{ThemeResource SystemAccentColor}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Modelo 50-30-20 -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Modelo 50-30-20" 
                       Style="{StaticResource SubtitleTextBlockStyle}"
                       Margin="0,0,0,16"/>

            <StackPanel Grid.Row="1" Spacing="20">
                <!-- Necesidades 50% -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="8">
                        <TextBlock Text="ðŸ’° Necesidades (50%)" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock>
                            <Run Text="Presupuesto: $"/><Run Text="{x:Bind ViewModel.Necesidades, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Gastado: $"/><Run Text="{x:Bind ViewModel.GastadoNecesidades, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock FontWeight="Bold">
                            <Run Text="Disponible: $"/><Run Text="{x:Bind ViewModel.DisponibleNecesidades, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Deseos 30% -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="8">
                        <TextBlock Text="ðŸŽ‰ Deseos (30%)" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock>
                            <Run Text="Presupuesto: $"/><Run Text="{x:Bind ViewModel.Deseos, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Gastado: $"/><Run Text="{x:Bind ViewModel.GastadoDeseos, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock FontWeight="Bold">
                            <Run Text="Disponible: $"/><Run Text="{x:Bind ViewModel.DisponibleDeseos, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Ahorro 20% -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="8">
                        <TextBlock Text="ðŸ“ˆ Ahorro e InversiÃ³n (20%)" FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock>
                            <Run Text="Presupuesto: $"/><Run Text="{x:Bind ViewModel.Ahorro, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="Ahorrado: $"/><Run Text="{x:Bind ViewModel.AhorradoTotal, Mode=OneWay}"/>
                        </TextBlock>
                        <TextBlock FontWeight="Bold">
                            <Run Text="Disponible: $"/><Run Text="{x:Bind ViewModel.DisponibleAhorro, Mode=OneWay}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Page>