<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="FinanzAPP.Views.ObjetivosPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid Padding="24,32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Margin="0,0,0,32">
                <TextBlock Text="ðŸŽ¯ Mis Objetivos" 
                           FontSize="32" 
                           FontWeight="Bold"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Define tus metas y haz un seguimiento de tu progreso"
                           FontSize="14"
                           Opacity="0.7"/>
            </StackPanel>

            <!-- Formulario para nuevo objetivo -->
            <Border Grid.Row="1" 
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    CornerRadius="12"
                    Padding="24"
                    Margin="0,0,0,32"
                    BorderBrush="{StaticResource SuccessBrush}"
                    BorderThickness="1">
                <StackPanel Spacing="16">
                    <TextBlock Text="âœ¨ Crear Nuevo Objetivo" 
                               FontSize="20" 
                               FontWeight="SemiBold"/>

                    <!-- Responsive Grid -->
                    <VariableSizedWrapGrid Orientation="Horizontal" ItemWidth="300" MaximumRowsOrColumns="2">
                        <TextBox Header="Nombre del objetivo" 
                                 PlaceholderText="Ej: iPhone nuevo, Auto, Viaje a Europa..."
                                 Text="{x:Bind ViewModel.NombreObjetivo, Mode=TwoWay}"
                                 Width="300"
                                 Margin="0,0,16,16"/>

                        <ComboBox Header="CategorÃ­a" 
                                  ItemsSource="{x:Bind ViewModel.CategoriasObjetivo}"
                                  SelectedItem="{x:Bind ViewModel.CategoriaSeleccionada, Mode=TwoWay}"
                                  Width="300"
                                  Margin="0,0,0,16"/>

                        <TextBox Header="Monto total necesario" 
                                 PlaceholderText="0.00"
                                 InputScope="Number"
                                 Text="{x:Bind ViewModel.MontoObjetivoTexto, Mode=TwoWay}"
                                 Width="300"
                                 Margin="0,0,16,16"/>

                        <TextBox Header="Monto mensual a destinar"
                                 PlaceholderText="Â¿CuÃ¡nto por mes?"
                                 InputScope="Number"
                                 Text="{x:Bind ViewModel.MontoMensualTexto, Mode=TwoWay}"
                                 Width="300"
                                 Margin="0,0,0,16"/>
                    </VariableSizedWrapGrid>

                    <!-- Tiempo estimado -->
                    <Border Background="{ThemeResource LayerFillColorDefaultBrush}"
                            CornerRadius="8"
                            Padding="16"
                            Visibility="{x:Bind ViewModel.MostrarTiempoEstimado, Mode=OneWay}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE121;" FontSize="16" Foreground="{StaticResource SuccessBrush}"/>
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="Tiempo estimado: "/>
                                <Run Text="{x:Bind ViewModel.TiempoEstimado, Mode=OneWay}" 
                                     FontWeight="Bold"
                                     Foreground="{StaticResource SuccessBrush}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <Button Content="Crear Objetivo" 
                            Command="{x:Bind ViewModel.CrearObjetivoCommand}"
                            Style="{StaticResource AccentButtonStyle}"
                            HorizontalAlignment="Right"
                            Padding="32,12"/>
                </StackPanel>
            </Border>

            <!-- Lista de objetivos -->
            <ItemsRepeater Grid.Row="2" ItemsSource="{x:Bind ViewModel.Objetivos, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <StackLayout Spacing="20"/>
                </ItemsRepeater.Layout>

                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="12"
                                Padding="24"
                                MinWidth="300">
                            <Grid RowSpacing="16">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header con nombre y categorÃ­a -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="{Binding Nombre}" 
                                                   FontSize="22" 
                                                   FontWeight="SemiBold"
                                                   TextWrapping="Wrap"/>

                                        <Border Background="{StaticResource SuccessBrush}"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                HorizontalAlignment="Left"
                                                Margin="0,8,0,0">
                                            <TextBlock Text="{Binding Categoria}" 
                                                       FontSize="12"
                                                       Foreground="White"
                                                       FontWeight="SemiBold"/>
                                        </Border>
                                    </StackPanel>

                                    <Button Grid.Column="1" 
                                            Content="ðŸ’°"
                                            Click="AportarButton_Click"
                                            Tag="{Binding}"
                                            Background="{StaticResource SuccessBrush}"
                                            Foreground="White"
                                            CornerRadius="8"
                                            Padding="16,12"
                                            FontSize="20"
                                            VerticalAlignment="Top"/>
                                </Grid>

                                <!-- Montos en Stack vertical para pantallas pequeÃ±as -->
                                <StackPanel Grid.Row="1" Spacing="12">
                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel>
                                            <TextBlock Text="Meta" Opacity="0.6" FontSize="12"/>
                                            <TextBlock FontSize="18" FontWeight="Bold" TextWrapping="Wrap">
                                                <Run Text="$"/><Run Text="{Binding MontoTotal}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Ahorrado" Opacity="0.6" FontSize="12"/>
                                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}" TextWrapping="Wrap">
                                                <Run Text="$"/><Run Text="{Binding MontoAhorrado}"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Falta" Opacity="0.6" FontSize="12"/>
                                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="{StaticResource DeseosBrush}" TextWrapping="Wrap">
                                                <Run Text="$"/><Run Text="{Binding MontoRestante}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>

                                <!-- Barra de progreso mejorada -->
                                <Grid Grid.Row="2" Height="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="{Binding Progreso}"/>
                                        <ColumnDefinition Width="{Binding MontoRestanteProgreso}"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"
                                            CornerRadius="6,0,0,6"
                                            HorizontalAlignment="Stretch">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#618C7C" Offset="0"/>
                                                <GradientStop Color="#7BA896" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>

                                    <Border Grid.Column="1"
                                            Background="{ThemeResource LayerFillColorDefaultBrush}"
                                            CornerRadius="0,6,6,0"
                                            HorizontalAlignment="Stretch"/>
                                </Grid>

                                <!-- Porcentaje -->
                                <TextBlock Grid.Row="3" 
                                           HorizontalAlignment="Right"
                                           FontSize="16"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource SuccessBrush}">
                                    <Run Text="{Binding Progreso}"/><Run Text="% completado"/>
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </Grid>
    </ScrollViewer>
</Page>