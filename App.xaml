<Application
    x:Class="FinanzAPP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FinanzAPP">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="AppColors.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Tema Oscuro -->
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#0D0D0D"/>
                    <SolidColorBrush x:Key="SystemAccentColor" Color="#618C7C"/>
                    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#011140"/>
                    <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="#010A26"/>
                </ResourceDictionary>

                <!-- Tema Claro -->
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ApplicationPageBackgroundThemeBrush" Color="#F2F2F2"/>
                    <SolidColorBrush x:Key="SystemAccentColor" Color="#6B7366"/>
                    <SolidColorBrush x:Key="CardBackgroundFillColorDefaultBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="LayerFillColorDefaultBrush" Color="#BDBFAE"/>
                    <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#20261C"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>